nav#docs-menu
  {{ partial "search" "sidebar" }}
  ul
    {{ $currentPage := . }}
    {{ range .Site.Menus.main }}
      li class={{ if $currentPage.HasMenuCurrent "main" . }}open{{ end }}
        .category-name {{ .Name }}
        .category-posts
          {{ range where site.Pages "Section" .Identifier }}
            a class={{ if eq $currentPage .}}active{{ end }} href={{ .RelPermalink }} {{ .Title }}
          {{ end }}
    {{ end }}
